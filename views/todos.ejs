<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>todos</title>
</head>
<body>
  <h1>YOUR TODO LIST</h1>
  <form action="/todos/createTodo" method="POST">
    <input type="text" placeholder="enter the item" name="todoItem">
    <button>submit</button>
  </form>
  <ul>
    <% todoitems.forEach((item, idx) => { %>
         <li class="todoItem" data-id="<%= item._id %>">
          <span class="<%= item.completed === true ? 'completed' : 'not-completed' %>"> <%= item.todoItem %></span>
          <span><button>delete</button></span>
         </li>  
    <% }) %>
  </ul>

</body>
</html>